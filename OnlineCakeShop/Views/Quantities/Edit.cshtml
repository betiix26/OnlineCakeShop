@model OnlineCakeShop.Models.Quantity

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Quantity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuantityId" />
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label"></label>
                <input asp-for="TotalAmount" class="form-control" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CakeId" class="control-label"></label>
                <select asp-for="CakeId" class="form-control" asp-items="ViewBag.CakeId"></select>
                <span asp-validation-for="CakeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomCakeId" class="control-label"></label>
                <select asp-for="CustomCakeId" class="form-control" asp-items="ViewBag.CustomCakeId"></select>
                <span asp-validation-for="CustomCakeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
